    pylab.savefig(doseLabel.replace(" ", "_"))
    book.insert_image2Excel(raw_idx,0,"plot Dose Plane @ brag_peak",os.path.join(cur_dir,doseLabel.replace(" ", "_") + ".png"))
    raw_idx = raw_idx + image_size
    return raw_idx

